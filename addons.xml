<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.MyFilmOn"
       name="Favorites FilmOn Channels"
       version="1.7.8"
       provider-name="Avigdor">
	<requires>
		<import addon="xbmc.python" version="2.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">MyFilmOn</summary>
		<description lang="en">Stream From FilmOn...</description>
		<platform>all</platform>
	</extension>
	<extension point="xbmc.addon.repository" name="XBMC Israeli streaming repo for streaming sites">
        <info compressed="false">https://raw.github.com/avigdork/xbmc-avigdork/master/addons.xml</info>
        <checksum>https://raw.github.com/avigdork/xbmc-avigdork/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.github.com/avigdork/xbmc-avigdork/master/repo</datadir>
    </extension>
</addon>

<addon id="repository.xbmc-avigdork" name="Avigdor's XBMC Repository" version="1.0.1" provider-name="avigdork">
    <extension point="xbmc.addon.repository" name="XBMC Israeli streaming repo for streaming sites">
        <info compressed="false">https://raw.github.com/avigdork/xbmc-avigdork/master/addons.xml</info>
        <checksum>https://raw.github.com/avigdork/xbmc-avigdork/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.github.com/avigdork/xbmc-avigdork/master/repo</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Avigdor's XBMC Repository</summary>
        <description>Download and install addons for XBMC by Avigdor</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
